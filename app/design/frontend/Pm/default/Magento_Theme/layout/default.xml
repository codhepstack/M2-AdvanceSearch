<?xml version="1.0"?>
<!--/**
 * Default layout file of the custom theme
 * IMPORTANT - Make all the default.xml changes in the Pixelmehanics_Theme layout folders. In this file, the overridden is not working properly
 * PM PS, 13.04.20, @link - TBD
 */-->
<page  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="default_head_blocks"/>
    <body>
        <!--/**
        * Added the banner slider to all the pages and added the custom checkout link.
        * PM PS, 23.06.20, @link - https://trello.com/c/vz1chOWu/81-frontpage-templating-programmierung
        */-->
        <referenceBlock name="header.links">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="checkout-link">
                <arguments>
                    <argument name="label" xsi:type="string">Zur Kasse</argument>
                    <argument name="path" xsi:type="string">checkout</argument>
                </arguments>
            </block>        
        </referenceBlock>
        <referenceContainer name="main.content">
            <block class="Magento\Cms\Block\Block" name="brandslider" after="-">
                <arguments>
                    <argument name="block_id" xsi:type="string">brand_slider</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
