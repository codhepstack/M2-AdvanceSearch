<?xml version="1.0"?>
<!--/**
* @author : PS
* @description : Default Layout file of Magento_Catalog extension to update and remove blocks or containers.
* @link: https://trello.com/c/vz1chOWu/81-frontpage-templating-programmierung
* @date : 20th April'20
*/-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!--// Remove Blocks //-->
        <!-- Remove Catalog Compare -->
        <referenceBlock name="catalog.compare.sidebar" remove="true"/>
        <!-- Remove Wishlist -->
        <referenceBlock name="wishlist_sidebar" remove="true" />
        <referenceContainer name="sidebar.additional">
            <block class="Pixelmechanics\Theme\Block\Category\Navigation" name="category-sidebar" after="-" template="Pixelmechanics_Theme::category/navigation.phtml"/>
        </referenceContainer>
    </body>
</page>