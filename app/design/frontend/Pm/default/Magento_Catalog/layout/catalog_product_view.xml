<?xml version="1.0"?>
<!--/**
* @author : PS
* @description : Default catalog_product_view layout file to move or remove the elemensts on the product page.
* @link: https://trello.com/c/vz1chOWu/81-frontpage-templating-programmierung
* @date : 20th April'20
*/-->
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
    <!--// Enable Reviews https://trello.com/c/m2Ljs7gu/127-bewertungen-ratings 04-06-2020 PV
        <!-// Remove Blocks //->
        <referenceBlock name="product.info.review" remove="true" />
        <referenceBlock name="reviews.tab" remove="true" />
        <referenceBlock name="product.review.form" remove="true" />
    <-!- Enable Blocks //-->
        <!--// Move Blocks //-->
        <move element="product.info.stock.sku" destination="product.info.main" after="page.main.title"/>
        <move element="product.info.overview" destination="content" after="product.info.media"/>
        <!-- <move element="product.info.whatsapp" destination="content" after="product.info.media" before="product.info.overview"/> -->
        <move element="product.info.type" destination="product.info.main" after="product.info.addonprices"/>
        <move element="product.lease.info.link" destination="product.info.main" before="product.info.type"/>
        <move element="product.info.delivery" destination="product.info.main" after="product.info.type"/>
        <referenceContainer name="product.info.main">
            <container name="product.info.manufacturer" label="Product info manufacturer container" htmlTag="div" htmlClass="product-info-manufacturer" before="product.info.price">
                <block class="Magento\Catalog\Block\Product\View" name="product.view.manufacturer" template="Magento_Catalog::product/view/manufacturer.phtml" />
            </container>
            <container name="product.info.addonprices" label="Product info addonprices container" htmlTag="div" htmlClass="product-info-addonprices" after="product.info.price">
                <block class="Pixelmechanics\Catalog\Block\Product\View" name="product.view.addon.prices" template="Magento_Catalog::product/price/addonprices.phtml" />
            </container>
            <container name="product.info.paymentinfo" label="Product info paymentinfo container" htmlTag="div" htmlClass="product-info-paymentinfo" before="product.info.whatsapp">
                <block class="Pixelmechanics\Catalog\Block\Product\View" name="product.view.paymentinfo" template="Magento_Catalog::product/view/paymentinfo.phtml" />
            </container>
            <container name="product.info.whatsapp" label="Product info whatsapp container" htmlTag="div" htmlClass="product-info-whatsapp" before="product.info.overview">
                <block class="Magento\Cms\Block\Block" name="catalog-whatsapp-link">
                    <arguments>
                        <argument name="block_id" xsi:type="string">catalog-whatsapp-link</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
        <!--// Add products information tabs //-->
        <referenceBlock name="product.info.details">
            <block class="Pixelmechanics\Catalog\Block\Product\View" name="product.info.purchase" template="Magento_Catalog::product/view/tabs/purchase_on_invoice.phtml" group="detailed_info">
                <arguments>
                    <argument translate="true" name="title" xsi:type="string">Purchase on invoice</argument>
                    <argument name="sort_order" xsi:type="string">12</argument>
                </arguments>
            </block>
            <block class="Pixelmechanics\Catalog\Block\Product\View" name="product.info.finance" template="Magento_Catalog::product/view/tabs/finance.phtml" group="detailed_info">
                <arguments>
                    <argument translate="true" name="title" xsi:type="string">Financing</argument>
                    <argument name="sort_order" xsi:type="string">13</argument>
                </arguments>
            </block>
            <block class="Pixelmechanics\Catalog\Block\Product\View" name="product.info.lease" template="Magento_Catalog::product/view/tabs/lease.phtml" group="detailed_info">
                <arguments>
                    <argument translate="true" name="title" xsi:type="string">Leasing</argument>
                    <argument name="sort_order" xsi:type="string">14</argument>
                </arguments>
            </block>
        </referenceBlock>
     </body>
</page>
