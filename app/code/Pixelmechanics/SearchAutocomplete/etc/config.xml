<?xml version="1.0"?>
<!--/**
 * Configuration File to set the base configurations.
 * PM PS, 30.04.20, @link - https://trello.com/c/fR4dyPJV/96-styling-der-basissuchfunktion-im-standard-von-magento-styling-of-magento-default-search-functionality
 */-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <pm_searchsuite>
            <general>
                <search_delay>500</search_delay>
                <autocomplete_fields>suggest,product</autocomplete_fields>
                <suggested_result_number>3</suggested_result_number>
                <product_result_number>5</product_result_number>
                <product_result_fields>name,image,reviews_rating,description,price</product_result_fields>
            </general>
        </pm_searchsuite>
    </default>
</config>